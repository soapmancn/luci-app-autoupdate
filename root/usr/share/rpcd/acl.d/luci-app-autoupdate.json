{
    "luci-app-autoupdate": {
        "description": "Grant access to autoupdate procedures",
        "read": {
            "ubus": {
                "service": [ "list" ],
                "luci.autoupdate": ["*"]
            },
            "uci": ["autoupdate"]
        },
        "write": {
            "ubus": {
                "luci.autoupdate": ["seturl", "download", "upgrade"]
            },
            "uci": ["autoupdate"]
        }
    }
}
